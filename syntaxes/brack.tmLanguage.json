{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Brack",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#arguments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.brack",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"commands": {
			"patterns": [
				{
					"name": "support.function.brack",
					"match": "(?<=(^|[^\\\\]+)(\\[|\\{|<))[^\\s\\[\\]\\{\\}<>]+"
				}
			]
		},
		"arguments": {
			"patterns": [{
				"name": "string.quoted.brack",
				"match": "(?<=(^|[^\\\\]+)[\\[\\{<][\\S]+ ([^,]*, )*)[^,\\[\\]<>\\{\\}]+"
			}]
		}
	},
	"scopeName": "source.brack"
}